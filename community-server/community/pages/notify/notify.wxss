/* pages/notify/notify.wxss */



.container {
  padding: 0;
  font-size: 14rpx;
  background: #fff;
  color: #000;
}

.page-header {
  /* display: flex; *//* justify-content:center; */
  border-bottom: 1 rpx solid #ccc;
  background-color: #298de5;
  height: 90rpx;
}

.page-title {
  padding: 20rpx 40rpx;
  color: #8ccefd;
  font-size: 38rpx;
  text-align: center;
  display: flex;
  justify-content: center;
}

.feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}

.feed-source .avatar {
  position: relative;
  display: inline-block;
}

.feed-source .avatar image {
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.feed-content .question {
  font-size: 28rpx;
  font-weight: 600px;
  line-height: 40rpx;
}

.question_name {
  margin-top: 10rpx;
  vertical-align: middle;
  color:#333;
}

.answer_content {
  color: #666;
}

.ranker_name {
  color: #333;
  text-align: center;
  font-size: 26rpx;
  margin-left: 10rpx;
  vertical-align: middle;
}

.blank{
  height: 20rpx;
}

.none{
  margin-left:36rpx;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #9a9c9b;
}

.time {
  vertical-align: text-bottom;
  color: #9a9c9b;
  float: right;
  margin-right: 10rpx;
  font-size: 26rpx;
}
