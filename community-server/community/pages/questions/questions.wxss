/* pages/questions/questions.wxss */



.container {
  padding: 0;
  font-size: 14rpx;
  background: #fff;
  color: #000;
}

.search{
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 25rpx;
  background: #2A8CE5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.search-left{
  background: #4EA3E7;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}
.search-left input{
  margin-left: 20rpx;
  width:570rpx;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.search-left image{
  margin-left:20rpx;
  width: 35rpx;
  height: 35rpx;
}



.search-right image{
  margin-right:26rpx;
  width: 45rpx;
  height: 45rpx;
}

.container .feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
  font-size: 30rpx;
}

.page-header {
  /* display: flex; *//* justify-content:center; */
  border-bottom: 1 rpx solid #ccc;
  background-color: #298de5;
  height: 90rpx;
}

.page-title {
  padding: 20rpx 40rpx;
  color: #8ccefd;
  font-size: 38rpx;
  text-align: center;
  display: flex;
  justify-content: center;
}

.ask-container {
  margin-top: -75rpx;
  width: 120rpx;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: middle;
  float: right;
  margin-right: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.image {
  width: 40rpx;
  height: 35rpx;
}

.ask {
  font-size: 28rpx;
  font-weight: lighter;
  line-height: 80rpx;
  color: #eee;
  margin-top: 4rpx;
}

.item-delete{
  width: 40rpx;
  height: 45rpx;
  float: right;
}
