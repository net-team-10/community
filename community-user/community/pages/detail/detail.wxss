/* pages/detail/detail.wxss */

.page-header {
  display: flex;
  flex-direction: column;
  border-bottom: 1 rpx solid #ccc;
  padding: 20rpx 36rpx 20rpx 40rpx;
  
}

.question-title{
  font-size: 35rpx;
  font-weight: 700;
  text-align: left;
}

.question-content{
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.add {
  margin-left: 10rpx;
  padding-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  justify-content: space-between;
}

.add .write-container {
  display: flex;
  align-items: center;
  margin-left: 25rpx;
}

.write-container image {
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
}

.write-container text {
  display: inline-block;
  margin-left: 5rpx;
  color: #9a9c9b;
  font-size: 30rpx;
}

.care {
  border: 2rpx solid #40bcd0;
  width: 130rpx;
  height: 45rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  color: #40bcd0;
  padding: 0;
  display: flex;
  flex-direction: center;
  justify-content: center;
  align-items: center;
  margin-right:34rpx;
  
}

.line {
  background: #ebebeb;
  height: 60rpx;
  padding: 10rpx 40rpx;
  text-align: left;
  width: 670rpx;
  opacity: 0.3;
}

.line text {
  display: inline-block;
  line-height: 60rpx;
  font-size: 30rpx;
  vertical-align: middle;
}

.answer-item {
  background: #fff;
  padding: 25rpx 30rpx 6rpx 30rpx;
  border-bottom: solid 1px #ebebeb;
}

.answerer-container{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar image{
  height:70rpx;
  width:70rpx;
  border-radius:50%;
}


.answerer-text{
  width:610rpx;
  color: #666;
  font-size: 28rpx;
  margin-left:10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.answerer-text image{

  height: 32rpx;
  width:32rpx;
  margin-top: -4rpx;
}

.answer-content{
  margin-left: 80rpx;
  margin-top: -14rpx;
  color: #333;
  font-size: 30rpx;
}

.showtime text {
  display: inline-block;
  color: #9a9c9b;
  font-size: 28rpx;
  margin-left: 370rpx;
}

.none-answer{
  margin-left:36rpx;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #9a9c9b;
}
