/* pages/focus/focus.wxss */

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.top-tab {
  width: 750rpx;
  height: 90rpx;
  background: #298de5;
  color: #8ccefd;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab.active {
  color: #fff;
  border-bottom: solid 2px #fff;
}

/**index.wxss**/


.item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 6rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
  font-size: 32rpx;
}


.container .feed-item {
  width: 690rpx;
  padding: 30rpx 30rpx 20rpx;
  margin: 7rpx 0 6rpx 0;
  background: #fff;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  box-shadow: 0 2px 5px #eee;
}

.container .feed-item .feed-source {
  width: 690rpx;
  left: 0;
  height: 50rpx;
}

.container .feed-item .feed-source .avatar {
  position: relative;
  display: inline-block;
}



.container .feed-item .feed-source .avatar image {
  /*position: absolute;*/
  display: inline-block;
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  top: 10rpx;
  vertical-align: middle;
}

.container .feed-item .feed-source text {
  /*position: absolute;*/
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  vertical-align: middle;
  margin: 0 0 0 15rpx;
  color: #333;
  font-size: 26rpx;
}

.container .feed-item .feed-source .item-more {
  display: inline-block;
  width: 40rpx;
  height: 45rpx;
}

.container .feed-item .feed-content {
  padding: 10rpx 0 0 0;
}

.container .feed-item .feed-content .question {
  
  font-weight: 600px;
  line-height: 40rpx;
}

.question-link{
  font-size:32rpx;
}

.answer-txt {
  font-size:28rpx;
  color: #666;
}

.none-focus{
  margin-left:36rpx;
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #9a9c9b;
}
